.budi-video-grid__wrapper {
    display: grid;
    column-gap: 24px;
    row-gap: 30px;
}

@media screen and (min-width: 767px) {
    .budi-video-grid__wrapper {
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(100px, auto);
    }

    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) {
        grid-column: span 3;
    }
}

.budi-video-grid__wrapper .budi-video-grid__item-inner {
    border-radius: 25px;
}

.budi-video-grid__wrapper .budi-video-grid__item .budi-video-wrapper {
    height: 100%;
}

.budi-video-grid__wrapper .budi-video-grid__item video {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}

.budi-video-grid__wrapper .budi-video-grid__item .budi-video-overlay {
    content: '';
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(11, 55, 83, 0.05) 0%, #0B3753 100%);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
}

.budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) video {
    max-height: 620px;
}

.budi-video-grid__wrapper .budi-video-play-button {
    /* max-width: 150px; */
    max-width: 60px;
    margin: 0 auto;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 9;
    cursor: pointer;
}

.video-grid-item__content {
    width: calc(100% - 40px);
    left: 20px;
    bottom: 30px;
    z-index: 6;
}

.video-grid-item__title {
    font-size: 20px;
}

.video-grid-item__title::after {
    content: '';
    width: calc(100% + 40px);
    left: -20px;
    background-color: var(--color-sub);
    position: absolute;
    z-index: -1;
    height: 14px;
    border-radius: 3px;
    bottom: -5px;
}

.video-grid-item__subtitle {
    margin-bottom: 0;
    font-size: 10px;
}

@media screen and (min-width: 768px) {
    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) .budi-video-play-button {
        max-width: 60px;
    }

    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) .video-grid-item__content {
        width: calc(100% - 90px);
        bottom: 87px;
        left: 46px;
    }

    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) .video-grid-item__title {
        font-size: 50px;
    }

    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) .video-grid-item__title::after {
        border-radius: 10px;
        height: 40px;
        bottom: -12px;
    }

    .budi-video-grid__wrapper .budi-video-grid__item:nth-child(1) .video-grid-item__subtitle {
        margin-bottom: 20px;
        font-size: 30px;
    }
}

@media screen and (max-width: 767px) {
    .budi-video-grid__wrapper {
        grid-template-columns: repeat(1, 1fr);
        gap: 24px;
    }

    .budi-video-grid__wrapper .budi-video-grid__item .video-grid-item__content {
        width: calc(100% - 40px) !important;
        left: 20px;
        bottom: 15px;
    }

    .video-grid-item__title {
        font-size: 18px !important;
    }

    .video-grid-item__subtitle {
        font-size: 12px !important;
    }
}